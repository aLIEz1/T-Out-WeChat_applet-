}
.goods-info image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin: 20rpx;
    z-index: 3;
}
/*图标*/
.add-icon,.reduce-icon{
    width: 40rpx;
    height: 40rpx;
}
.edit-icon{
    width: 60rpx;
    height: 60rpx;
    float: right;
    margin-right: 20rpx;
}
