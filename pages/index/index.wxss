/**index.wxss**/

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}
/* 招牌部分 */
.signature-logo{
  width:200rpx;
  height:200rpx;
  border-radius:50%;
}
.signature-box{

  background: #F33333;
  color: white;
}

.signature-logo-box{
  text-align: center;
  /* background: #2A5AE9; */
  background: #F33333;
  padding:15rpx 25rpx;
}
/* 优惠部分 */
.preferential-title{
  text-align: center;
  font-size: 45rpx;
  font-weight: 600;
}
.preferential-item{
  display: inline-flex;
  padding: 15rpx 20rpx ;
  font-size: 30rpx;
}

.userinfo-nickname {
    color: #aaa;
}
.signature-info{
  width: 100%;
  line-height: 80rpx;
  display: flex;
  justify-content: center;
}
.shop-name{
  font-size: 60rpx;
  font-weight: 800;
}
.usermotto {
    margin-top: 200px;
}
/* 公告栏 */
.notice-box {
    width:100%;
    height: 50rpx;
    /* background: #464646; */
    background: #F33333;
    opacity:90%;
    color: white;
    padding: 5rpx;
}
.notice-css{
  margin-left: 15rpx;
}
/* 轮播图 */
.swiper-box{
  text-align: center;
}
.swiper-list{
  width: 100%;
}
/**购物车*/
.trolley {
    position: fixed;
    bottom: -10%;
    background: #E6E0E0;
    height: 10%;
    width: 100%;
    z-index: 20;
    /* display: inline-flex; */
    /* flex-direction:  */

}
