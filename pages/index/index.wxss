  /* position: absolute; */
  right: 20rpx;
  /* background: red; */
  background: #F33333;
  float: right;
  padding: 10rpx 20rpx;
  margin: 0 auto;
  margin-top: -25rpx;
  color: white;
}
.base-price-btn{
  background: #796C6C;
}
.goods-box{
  width: 100%;
